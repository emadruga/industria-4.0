{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://industria40.gov.br/schemas/hierarchy-schema.json",
  "title": "Industry 4.0 Maturity Model Hierarchy Schema",
  "description": "Schema for the hierarchical structure: Block → Pilar → Dimension → Capacity",
  "version": "1.0.0",

  "definitions": {
    "capacity_reference": {
      "type": "object",
      "required": ["id", "name", "file_path"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^CAP-[A-Z]+-[A-Z]+-[A-Z]+-[0-9]{3}$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "file_path": {
          "type": "string",
          "description": "Relative path to the capacity JSON file"
        },
        "question_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of questions in this capacity"
        },
        "status": {
          "type": "string",
          "enum": ["draft", "review", "approved", "deprecated"]
        }
      }
    },

    "dimension": {
      "type": "object",
      "required": ["name", "description", "capacities"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "code": {
          "type": "string",
          "pattern": "^[A-Z]+$",
          "description": "Short code for the dimension (e.g., CL for Competência de Liderança)"
        },
        "description": {
          "type": "string",
          "description": "Description of what this dimension assesses"
        },
        "capacities": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/capacity_reference"
          },
          "minItems": 0
        }
      }
    },

    "pilar": {
      "type": "object",
      "required": ["name", "dimensions"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "code": {
          "type": "string",
          "pattern": "^[A-Z]+$",
          "description": "Short code for the pilar (e.g., EG for Estrutura e Gestão)"
        },
        "description": {
          "type": "string"
        },
        "dimensions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/dimension"
          },
          "minItems": 0
        }
      }
    },

    "block": {
      "type": "object",
      "required": ["name", "pilares"],
      "properties": {
        "name": {
          "type": "string",
          "enum": ["Organização", "Processo", "Tecnologia"]
        },
        "code": {
          "type": "string",
          "enum": ["ORG", "PROC", "TEC"],
          "description": "Short code for the block"
        },
        "description": {
          "type": "string",
          "description": "Description of what this block encompasses"
        },
        "pilares": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pilar"
          },
          "minItems": 0
        }
      }
    }
  },

  "type": "object",
  "required": ["version", "last_updated", "blocks"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "description": {
      "type": "string",
      "description": "Description of the maturity model"
    },
    "source_frameworks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version"],
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "year": {
            "type": "integer"
          }
        }
      }
    },
    "blocks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/block"
      },
      "minItems": 1,
      "maxItems": 3
    },
    "statistics": {
      "type": "object",
      "properties": {
        "total_capacities": {
          "type": "integer",
          "minimum": 0
        },
        "total_questions": {
          "type": "integer",
          "minimum": 0
        },
        "total_dimensions": {
          "type": "integer",
          "minimum": 0
        },
        "total_pilares": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
